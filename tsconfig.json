{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es2017",
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "webpack.config.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
